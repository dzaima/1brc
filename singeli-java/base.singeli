} else {
  def ux = u64
  include 'debug/printf'
  include 'skin/c'
  include 'arch/c'
  include 'clib/malloc'
  def popc{x:T if isint{T} and width{T}==64} = emit{ux, '__builtin_popcountll', x}
  def popc{x:T if isint{T} and width{T}<=32} = emit{ux, '__builtin_popcount', to_u32{x}}
  
  def rare{x:(u1)} = emit{u1, '__builtin_expect', x, 0}
  def likely{x:(u1)} = emit{u1, '__builtin_expect', x, 1}
  def unpredictable{x:(u1)} = emit{u1, '__builtin_unpredictable', x}
  
  # optimization fences
  def ofence{x:T if isprim{T}} = emit{T, 'OFENCE_G', x}
  def ofence{x:T if vece{T}} = emit{T, 'OFENCE_V', x}
  
  def static_arr{E, n} = undefined{E, n}
  def static_arr{E, vs if ktup{vs}} = { buf:*E = vs; buf }
  def object_arr = static_arr
  def function_arr = static_arr
  
  def printstr{v0:V, ...g0} = { # \n → $, \0 → ^
    v:= v0
    def n = vcount{V}
    def g = if (length{g0}==0) n else select{g0,0}
    buf:= undefined{eltype{V}, n}
    v = blend{v, V**36, v==V**10}
    v = blend{v, V**94, v==V**0}
    store{*V~~buf, 0, v}
    emit{void, 'printf', merge{'"', ...(n/g)**merge{...g**'%c',' '}, '\n"'}, ...each{{i} => load{buf,i}, range{n}}}
  }
  def local_new{T, n} = undefined{T, n}
  
  def emu_gather{(i64), arr:(*i8), ptrOff, idxs:([4]u64), scale==1} = { # emulate the emulated gather on java
    def LD = [16]i8
    def LN = [2]i64
    make{[4]i64, each{{i} => {
      extract{LN~~load{LD, arr, ptrOff+extract{idxs,i}}, 0}
    }, range{4}}}
  }
  
  def make{V, ...es} = vec_make{V, ...es}
  def load{V, p:*_, off if veca{V}} = load{*V~~(p+off), 0}
  def store{p:*E, off, x:V if isprim{E} and veca{V}} = store{*V~~(p+off), 0, x}
  def broadcast{V, e if veca{V}} = vec_broadcast{V, e}
}

if_inline (hasarch{'AVX2'}) {
  include 'arch/iintrinsic/basic'
  def ctype{T} = merge{'(__m', fmtnat{width{T}}, match(quality{eltype{T}},elwidth{T}){ {('f'),(64)}=>'d'; {('f'),(32)}=>''; {_,_}=>'i'; }, ')'}
  def reinterpret{R, x:X if vece{R} and vece{X} and width{R}==width{X} and R!=X and ctype{R}!=ctype{X}} = emit{R, ctype{R}, x}
  
  def ctz{x:T if isint{T} and width{T}==64} = emit{ux, '_tzcnt_u64', x}
  def ctz{x:T if isint{T} and width{T}<=32} = emit{ux, '_tzcnt_u32', x}
  
  def clz{n==64, x:T if isint{T} and width{T}==64} = emit{ux, '_lzcnt_u64', x}
  def clz{n==32, x:T if isint{T} and width{T}==32} = emit{ux, '_lzcnt_u32', x}
  
  def cmov{cond, t, f if not knum{cond}} = {
    def T = tyboth{t,f}
    emit{T, 'CMOV_DAMMIT', cond, T~~t, T~~f}
  }
  
  def full_eq{x:T, y:T if vece{T}} = homMask{re_el{i8,x} == re_el{i8,y}} == ((1<<vcount{T})-1)
  def full_ne{x:T, y:T} = ~(x===y)
  def v_eq{a:T, b:T} = a==b
  def v_ne{a:T, b:T} = a!=b
  def madd{a:[8]i16, b:[8]i16} = emit{[4]i32, '_mm_madd_epi16', a, b}
  def madd{a:[16]u8, b:[16]i8} = emit{[8]i16, '_mm_maddubs_epi16', a, b}
  def madd{a:[16]i16, b:[16]i16} = emit{[8]i32, '_mm256_madd_epi16', a, b}
  def madd{a:[32]u8, b:[32]i8} = emit{[16]i16, '_mm256_maddubs_epi16', a, b}
  def madd{a:[32]i8, b:[32]u8} = madd{b,a}
  
  def widen{E==i64, x:T if T==[4]i32} = emit{[4]i64, '_mm256_cvtepi32_epi64', x}
  
  def homMask{x:T if veci{T} and ty_u{T}==[32]u8} = emit{u32, '_mm256_movemask_epi8', x}
  def homMask{x:T if veci{T} and ty_u{T}==[16]u8} = emit{u32, '_mm_movemask_epi8', x}
  def homMask{x:T if veci{T} and ty_u{T}==[8]u32} = emit{u32, '_mm256_movemask_ps', re_el{f32,x}}
  def homMask{x:T if veci{T} and ty_u{T}==[4]u32} = emit{u32, '_mm_movemask_ps', re_el{f32,x}}
  def homMask{x:T if veci{T} and ty_u{T}==[2]u64} = emit{u32, '_mm_movemask_pd', re_el{f64,x}}
  
  def blend{f:T, t:T, m:M if width{T}==256} = emit{T, '_mm256_blendv_epi8', f, t, m}
  def blend{f:T, t:T, m:M if width{T}==128} = emit{T, '_mm_blendv_epi8', f, t, m}
  
  def l128shufb_ident{T} = cycle{vcount{T}, range{16}}
  def l128shufb{v:T, i:I if width{T}==256} = emit{T, '_mm256_shuffle_epi8', v, i}
  def l128shufb_mask{T if width{T}==256} = 15
  def l128shrb{a:T, n if width{T}==128} = T~~emit{[4]i32, '_mm_bsrli_si128', ty_u{a}, n}
  def l128shrb{a:T, n if width{T}==256} = T~~emit{[8]i32, '_mm256_bsrli_epi128', ty_u{a}, n}
  
  def unpack128{a:T, b:T} = tup{emit{T, '_mm256_unpacklo_epi64', a, b}, emit{T, '_mm256_unpackhi_epi64', a, b}}
  
  local def base{b, {h,...t}} = h + b*base{b,t}
  local def base{b, {}} = 0
  
  local def lanes{is, eq} = {
    def h = length{is}/2;
    def p0 = slice{is,0,h}
    def p1 = slice{is,h}
    fold{&, (p0<h) & (p1>=h)} & (if (eq) same{p0, p1-h} else 1)
  }
  
  def sel{([8]u32), x:V, s if width{V}==256} = V~~emit{[8]i32, '_mm256_permutevar8x32_epi32', re_el{i32,x}, s}
  
  def shuf{([4]u32), x:V, ...is if width{V}==128 and length{is}==4} = emit{V, '_mm_shuffle_epi32', x, fold{+, is << tup{0,2,4,6}}}
  def shuf{([2]u64), x:V, ...is if width{V}==128 and length{is}==2} = shuf{[4]u32, x, ...join{each{{i}=>i*2 + tup{0,1}, is}}}
  def shuf{([4]u64), x:V, ...is if width{V}==256 and length{is}==4} = V~~emit{[4]f64, '_mm256_permute4x64_pd', re_el{f64,x}, base{4, is}}
  def shuf{([4]u64), x:V, ...is if width{V}==256 and length{is}==4 and lanes{is,0}} = V~~emit{[4]f64, '_mm256_permute_pd', re_el{f64,x}, base{2, is&1}}
  def shuf{([8]u32), x:V, ...is if width{V}==256 and length{is}==8 and lanes{is,1}} = V~~emit{[8]i32, '_mm256_shuffle_epi32', re_el{i32,x}, base{4, slice{is,0,4}}}
  
  def pair{a:T,b:T if width{T}==128} = re_el{eltype{T}, emit{[8]i32, '_mm256_setr_m128i', re_el{i32,a}, re_el{i32,b}}}
  def half{x:T, i==0 if width{T}==256} = [vcount{T}/2]eltype{T}~~emit{[16]i8, '_mm256_castsi256_si128', ty_u{x}}
  def half{x:T, i==1 if width{T}==256} = [vcount{T}/2]eltype{T}~~emit{[16]i8, '_mm256_extracti128_si256', ty_u{x}, i}
  
  def gather{E, ptr:P, ptrOff, idxs:V, scale} = {
    def n = vcount{V}
    emit{[n]E, match(width{E}, n, elwidth{V}) {
      {(32), (8), (32)} => '_mm256_i32gather_epi32'
      {(64), (4), (32)} => '_mm256_i32gather_epi64'
      {(32), (4), (64)} => '_mm256_i64gather_epi32'
      {(64), (4), (64)} => '_mm256_i64gather_epi64'
    }, *void ~~ (ptr + ptrOff), idxs, scale}
  }
  
} else if_inline (hasarch{'AARCH64'}) {
  include 'arch/neon_intrin/basic'
  require{'arm_neon.h'}
  def nty{T} = {
    def q = quality{T}
    merge{if (q=='i') 's' else q, fmtnat{width{T}}}
  }
  local def v64{T}  = veca{T} and width{T}==64
  local def v128{T} = veca{T} and width{T}==128
  local def nty{T if veca{T}} = nty{eltype{T}}
  def ntyp{S, ...S2, T if v128{T}} = merge{S, 'q', ...S2, '_', nty{T}}
  def ntyp{S, ...S2, T if  v64{T}} = merge{S,      ...S2, '_', nty{T}}
  local def ntyp0{S, T} = merge{S, '_', nty{T}}
  
  def to_w{T, w} = primtype{quality{T}, w}
  def w_n{T, w if isprim{T}} = primtype{quality{T}, w}
  def w_d{T if isprim{T}} = to_w{T, width{T}*2} # double/halve primitive type width
  def w_h{T if isprim{T}} = to_w{T, width{T}/2}
  def n_d{T if veca{T}} = [vcount{T}*2](eltype{T}) # double/halve vector count
  def n_h{T if veca{T}} = [vcount{T}/2](eltype{T})
  def el_d{T if veca{T}} = [vcount{T}](w_d{eltype{T}}) # double/halve element width, preserving count
  def el_h{T if veca{T}} = [vcount{T}](w_h{eltype{T}})
  def el_m{T if veca{T}} = re_el{w_d{eltype{T}}, T};  def el_m{x:T} = re_el{T}~~x # double/halve element width, preserving width
  def el_s{T if veca{T}} = re_el{w_h{eltype{T}}, T};  def el_s{x:T} = re_el{T}~~x
  def half{x:T, n==0 if v128{T}} = emit{n_h{T}, ntyp0{'vget_low',  T}, x}
  def half{x:T, n==1 if v128{T}} = emit{n_h{T}, ntyp0{'vget_high', T}, x}
  
  def fold_add{a:T if v128{T}} = emit{eltype{T}, ntyp{'vaddv', T}, a}
  def fold_min{a:T if v128{T}} = emit{eltype{T}, ntyp{'vminv', T}, a}
  def fold_max{a:T if v128{T}} = emit{eltype{T}, ntyp{'vmaxv', T}, a}
  def blend{f:T, t:T, m:M} = emit{T, ntyp{'vbsl', T}, m, t, f}
  def full_eq{a, b} = fold_min{a==b} != 0
  def full_ne{a, b} = fold_min{a==b} == 0
  def mulwLo{a:T,b:T if v64{T}}  = emit{el_d{T}, ntyp{'vmull', T}, a, b}
  def mulwHi{a:T,b:T if v128{T}} = emit{el_m{T}, ntyp0{'vmull_high', T}, a, b}
  def mulw  {a:T,b:T if v128{T}} = tup{mulwLo{half{a,0}, half{b,0}}, mulwHi{a,b}}
  
  def shuf{L, x, ...vs if vcount{L}<16} = {
    shuf{[vcount{L}*2]primtype{'u',elwidth{L}/2}, x, ...join{each{{i} => tup{i*2, i*2+1}, vs}}}
  }
  def sel{([16]u8), x:V, s:S if v128{V} and v128{S}} = V~~emit{[16]u8, 'vqtbl1q_u8', re_el{u8,x}, re_el{u8,s}}
  def shuf{L==[16]u8, x, ...vs if length{vs}==16} = sel{L, x, make{L, vs}}
  
  # these don't satisfy ubsan, but ¯\_(ツ)_/¯
  def ctz{x:T if isint{T} and width{T}==64} = emit{ux, '__builtin_ctzll', x}
  def ctz{x:T if isint{T} and width{T}<=32} = emit{ux, '__builtin_ctz', x}
  def clz{n==64, x:T if isint{T} and width{T}==64} = emit{ux, '__builtin_clzll', x}
  def clz{n==32, x:T if isint{T} and width{T}==32} = emit{ux, '__builtin_clz', x}
  
  def l128shufb_ident{T if v128{T}} = range{16}
  def l128shufb{v:T, i:I if v128{T} and v128{I}} = sel{[16]u8, v, i}
  def l128shufb_mask{T if v128{T}} = 15
  
  def packLo{x:T, y:T if veci{T}} = { def H=el_s{T}; emit{H, ntyp{'vuzp1', H}, H~~x, H~~y} }
  def narrowPair{a:T, b:T if veci{T}} = packLo{a, b}
  
  def homMask{x:T if T==[16]u8} = {
    t:= [8]u16~~sel{[16]u8, x, make{[16]u8, 0,8,1,9,2,10,3,11,4,12,5,13,6,14,7,15}}
    fold_add{t & make{[8]u16, (1<<iota{8})*0x0101}}
  }
  def homMask{x:T=[k]E if vecu{T} and width{E}>=k} = {
    truncBits{k, fold_add{x & make{T, 1<<iota{k}}}}
  }
  def homMask{a:T,b:T,c:T,d:T if T==[16]u8} = {
    m:= make{[16]u8, 1<<(iota{16}&7)}
    t1:= addp{a&m, b&m}
    t2:= addp{c&m, d&m}
    t3:= addp{t1, t2}
    extract{[2]u64~~addp{t3,t3},0}
  }
  def ofence{x} = x
}
