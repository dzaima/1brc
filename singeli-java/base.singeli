def truncBits{n, v if n<=8}  = cast_i{u8, v}
def truncBits{n, v if n==16} = cast_i{u16, v}
def truncBits{n, v if n==32} = cast_i{u32, v}
def truncBits{n, v if n==64} = cast_i{u64, v}
def tern{c, t:T, f:T} = { r:=f; if (c) r=t; r }
def __min{a:T, b:T if isprim{T}} = tern{a>b, b, a}
def __max{a:T, b:T if isprim{T}} = tern{a>b, a, b}
def __add{a:T, 0 if intty{T}} = a # prettier output
def __add{0, a:T if intty{T}} = a
def andnot{a, b if intany{a} and intany{b}} = a & ~b
local def to_u32{x} = promote{u32,ty_u{x}}
def clz{n, x:T if isint{T} and width{T}>=32} = clz{width{T}, x} - (width{T}-n)
def clz{n, x:T if isint{T} and width{T}<32} = clz{n, to_u32{x}}

def tree_fold{F, x} = {
  def h = length{x}>>1
  F{tree_fold{F, slice{x,0,h}}, tree_fold{F, slice{x,h,length{x}}}}
}
def tree_fold{F, {x}} = x

